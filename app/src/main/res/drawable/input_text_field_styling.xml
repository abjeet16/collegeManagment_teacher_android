<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Solid fill color -->
    <solid android:color="@color/light_gray" />

    <!-- Border stroke for subtle contrast -->
    <stroke
        android:color="@color/soft_purple"
        android:width="2dp" />

    <!-- Shadow-like effect with padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>